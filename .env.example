# WatchX Environment Configuration
# Copy this file to .env and customize

# Server
PORT=3001
HOST=0.0.0.0

# Database
DB_PATH=./data/watchx.db

# Alert Defaults
ALERT_CHECK_INTERVAL_MS=10000
METRIC_RETENTION_DAYS=30

# Email Alerts (optional — configure to enable email notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=watchx@example.com
ALERT_EMAIL_TO=

# Webhook Alerts (optional — POST JSON payloads to this URL)
WEBHOOK_URL=
